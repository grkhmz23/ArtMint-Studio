# App
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Solana (REQUIRED for mainnet)
# For mainnet, use a dedicated RPC provider (Helius, QuickNode, etc.)
# Do NOT use public RPC for production!
SOLANA_CLUSTER=mainnet-beta
SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_API_KEY
SOLANA_RPC_BACKUP_URL=https://sleek-orbital-rain.solana-mainnet.quiknode.pro/YOUR_TOKEN
NEXT_PUBLIC_SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_API_KEY

# AI Provider (REQUIRED)
AI_PROVIDER=anthropic
AI_API_KEY=sk-ant-api03-YOUR_API_KEY
AI_MODEL=claude-sonnet-4-20250514

# Storage (REQUIRED)
# Use 'vercel-blob' for Vercel deployments
# Use 'local' for development
STORAGE_PROVIDER=vercel-blob
BLOB_ACCESS=public
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_YOUR_TOKEN

# Database (REQUIRED)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Auth (REQUIRED - generate with: openssl rand -hex 32)
SESSION_SECRET=your-64-character-hex-secret-here

# Quotas
AI_MAX_DAILY_PER_USER=10
AI_MAX_DAILY_GLOBAL=500

# Transaction Settings (optional - defaults shown)
# PRIORITY_FEE_MICRO_LAMPORTS=5000
# COMPUTE_UNIT_LIMIT_MINT=200000
# COMPUTE_UNIT_LIMIT_LISTING=100000
